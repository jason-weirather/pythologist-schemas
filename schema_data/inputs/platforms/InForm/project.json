{
    "$schema": "https://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "samples":{
            "title":"Samples",
            "type": "array",
            "items": {
                "type": "object",
                "description": "Allowed samples and any relevent fields to keep track with each sample.",
                "properties":{
                    "sample":{
                        "title":"Sample",
                        "type":"string",
                        "description":"Unique sample name."
                    }
                },
                "additionalProperties":false,
                "required":["sample"]
            }
        },
        "parameters": {
            "title":"Parameters",
            "type": "object",
            "properties":{
                "project_name":{
                    "title":"Project Name",
                    "type":"string",
                    "description":"The panel name."
                },
                "project_path":{
                    "title":"Project Path",
                    "type":["null","string"],
                    "description":"Location of the folder. By default assume this folder is a standard format project."
                },
                "microns_per_pixel":{
                    "title":"Microns Per Pixel",
                    "type":"number",
                    "default":0.496,
                    "description":"Location of the folder."
                }
            },
            "additionalProperties":false
        }
    },
    "additionalProperties":false,
    "required": ["samples","parameters"]
}
